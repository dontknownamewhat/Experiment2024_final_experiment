<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Hello1841Activity">

    <!-- TabLayout for the tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ViewPager2 to display fragments for each tab -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- New LinearLayout for Check-In UI elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- EditText for Check-in Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clocking_event"
            android:padding="4dp" />

        <!-- Button to Add Check-In Record -->
        <Button
            android:id="@+id/btnAddCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Clocking_record"
            android:layout_gravity="start" />

        <!-- RecyclerView to Display All Check-In Records -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCheckIns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Button Layout for Photo Actions -->
    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/take_picture1" />

        <Button
            android:id="@+id/btn_take_photo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/take_picture2" />

        <Button
            android:id="@+id/btn_choose_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/album1" />

        <Button
            android:id="@+id/btn_choose_photo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/album2" />
    </LinearLayout>

    <!-- Image View with Reduced Height -->
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter" />
</LinearLayout>
